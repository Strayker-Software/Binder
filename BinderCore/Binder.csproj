<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <RootNamespace>Binder</RootNamespace>
    <AssemblyName>Binder</AssemblyName>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <StartupObject>Binder.Program</StartupObject>
    <Version>0.2.0</Version>
    <NeutralLanguage>en-US</NeutralLanguage>
    <Authors>Daniel Strayker Nowak</Authors>
    <Company>Strayker Software</Company>
    <Description>Simple WinForms-based binder for task managment.</Description>
    <Copyright>Copyright © 2020-2021 Daniel Strayker Nowak and Strayker Software Contributors</Copyright>
    <PackageProjectUrl>https://straykersoftware.pl</PackageProjectUrl>
    <RepositoryUrl>https://github.com/StraykerPL/Binder</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageReleaseNotes>Alpha Dev</PackageReleaseNotes>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <SignAssembly>false</SignAssembly>
    <RunPostBuildEvent>Always</RunPostBuildEvent>
    <Platforms>AnyCPU;x64</Platforms>
    <AssemblyVersion>0.2.0.0</AssemblyVersion>
    <FileVersion>0.2.0.0</FileVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <PlatformTarget>x64</PlatformTarget>
    <DocumentationFile>H:\Daniel\Repozytoria\Binder\BinderCore\BinderCompileLog.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <Optimize>false</Optimize>
    <PlatformTarget>x64</PlatformTarget>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Task\DataGridViewCategory.cs" />
    <Compile Remove="Task\DataGridViewTask.cs" />
    <Compile Remove="UI\ITasksCategory.cs" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Languages\ResourceInputDialog.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>ResourceInputDialog.resx</DependentUpon>
    </Compile>
    <Compile Update="Properties\Languages\ResourceMainForm.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>ResourceMainForm.resx</DependentUpon>
    </Compile>
    <Compile Update="Properties\Languages\ResourceTaskForm.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>ResourceTaskForm.resx</DependentUpon>
    </Compile>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
    <Compile Update="Properties\Settings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>Settings.settings</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Languages\ResourceInputDialog.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>ResourceInputDialog.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="Properties\Languages\ResourceTaskForm.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>ResourceTaskForm.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="Properties\Languages\ResourceMainForm.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>ResourceMainForm.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Update="Properties\Settings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>

</Project>